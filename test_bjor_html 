        // Mobile menu toggle
        function toggleMobileMenu() {
            const mobileNav = document.getElementById('mobile-nav');
            mobileNav.classList.toggle('show');
        }

        // Show section function with mobile support
        function showSection(sectionName) {
            // Hide all sections
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Show selected section
            if (sectionName === 'map') {
                document.getElementById('map-section').classList.add('active');
                // Initialize map after showing the section
                setTimeout(() => {
                    initializeMap();
                }, 100);
            } else if (sectionName === 'drunk-meter') {
                document.getElementById('drunk-meter').classList.add('active');
            } else {
                document.getElementById(sectionName).classList.add('active');
            }
            
            // Update nav buttons - desktop
            document.querySelectorAll('.nav-button').forEach(btn => {
                btn.classList.remove('active');
                if (btn.textContent.toLowerCase() === sectionName || 
                    (btn.textContent === 'Home' && sectionName === 'home') ||
                    (btn.textContent === 'Map' && sectionName === 'map') ||
                    (btn.textContent === 'Rate' && sectionName === 'rating') ||
                    (btn.textContent === 'Scoreboard' && sectionName === 'scoreboard') ||
                    (btn.textContent === 'My Stats' && sectionName === 'stats') ||
                    (btn.textContent === 'Drunk Meter' && sectionName === 'drunk-meter')) {
                    btn.classList.add('active');
                }
            });

            // Update nav buttons - mobile
            document.querySelectorAll('.mobile-nav-button').forEach(btn => {
                btn.classList.remove('active');
                if (btn.textContent.toLowerCase().includes(sectionName) || 
                    (btn.textContent.includes('Home') && sectionName === 'home') ||
                    (btn.textContent.includes('Map') && sectionName === 'map') ||
                    (btn.textContent.includes('Rate') && sectionName === 'rating') ||
                    (btn.textContent.includes('Scoreboard') && sectionName === 'scoreboard') ||
                    (btn.textContent.includes('My Stats') && sectionName === 'stats') ||
                    (btn.textContent.includes('Drunk Meter') && sectionName === 'drunk-meter')) {
                    btn.classList.add('active');
                }
            });
            
            // Load section-specific content
            if (sectionName === 'rating') {
                loadVenueOptions();
            } else if (sectionName === 'scoreboard') {
                loadScoreboard();
            } else if (sectionName === 'stats') {
                loadStats();
            } else if (sectionName === 'drunk-meter') {
                loadDrunkMeter();
            }
        }
        
        // Initialize map
        function initializeMap() {
            if (!map) {
                map = L.map('map').setView([64.1466, -21.9426], 13);
                
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '¬© <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
                    maxZoom: 19,
                    minZoom: 1,
                    subdomains: ['a', 'b', 'c']
                }).addTo(map);
                
                createMarkers();
                addMapLegend();
            } else {
                // If map already exists, just invalidate size to fix any display issues
                map.invalidateSize();
            }
        }
        
        // Create map markers
        function createMarkers() {
            const typeColors = {
                'brewery': '#e74c3c',
                'craftbar': '#3498db', 
                'pub': '#f39c12',
                'restaurant': '#27ae60'
            };
            
            beerVenues.forEach(venue => {
                const color = typeColors[venue.type];
                const size = venue.type === 'brewery' ? 12 : 10;
                
                const marker = L.circleMarker(venue.coords, {
                    radius: size,
                    fillColor: color,
                    color: '#ffffff',
                    weight: 2,
                    opacity: 1,
                    fillOpacity: 0.8
                });
                
                const popupContent = `
                    <div class="beer-popup">
                        <h3>${venue.name}</h3>
                        <div class="beer-info"><strong>Type:</strong> ${venue.type.charAt(0).toUpperCase() + venue.type.slice(1)}</div>
                        <div class="beer-info"><strong>Rating:</strong> ${venue.rating}</div>
                        <div class="beer-info"><strong>Price:</strong> ${venue.priceRange}</div>
                        <div class="beer-info"><strong>Address:</strong> ${venue.address}</div>
                        <div class="beer-info"><strong>Hours:</strong> ${venue.hours}</div>
                        <div class="beer-highlights">
                            <strong>Highlights:</strong> ${venue.highlights}
                        </div>
                        <div class="beer-info">${venue.description}</div>
                        <div class="popup-actions">
                            <button class="popup-button" onclick="rateAtVenue('${venue.name}')">Rate a Beer Here</button>
                        </div>
                    </div>
                `;
                
                marker.bindPopup(popupContent);
                marker.addTo(map);
                allMarkers.push({marker: marker, venue: venue});
            });
        }
        
        // Add map legend
        function addMapLegend() {
            const legend = L.control({position: 'bottomright'});
            legend.onAdd = function(map) {
                const div = L.DomUtil.create('div', 'map-legend');
                div.style.background = 'rgba(26, 26, 26, 0.95)';
                div.style.color = 'white';
                div.style.padding = '12px';
                div.style.borderRadius = '8px';
                div.style.fontSize = '12px';
                
                div.innerHTML = `
                    <h4 style="margin: 0 0 8px 0; color: #f39c12;">üç∫ Venue Types</h4>
                    <div><i style="background: #e74c3c; width: 12px; height: 12px; display: inline-block; border-radius: 50%; margin-right: 8px;"></i>Breweries</div>
                    <div><i style="background: #3498db; width: 10px; height: 10px; display: inline-block; border-radius: 50%; margin-right: 8px;"></i>Craft Beer Bars</div>
                    <div><i style="background: #f39c12; width: 10px; height: 10px; display: inline-block; border-radius: 50%; margin-right: 8px;"></i>Traditional Pubs</div>
                    <div><i style="background: #27ae60; width: 10px; height: 10px; display: inline-block; border-radius: 50%; margin-right: 8px;"></i>Beer Restaurants</div>
                `;
                return div;
            };
            legend.addTo(map);
        }
        
        // Filter functions
        function filterByType(type) {
            // Update button states
            document.querySelectorAll('.map-controls .filter-button').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            allMarkers.forEach(({marker, venue}) => {
                if (type === 'all' || venue.type === type) {
                    marker.addTo(map);
                } else {
                    map.removeLayer(marker);
                }
            });
        }
        
        function filterByBeer(beerType) {
            // Update button states
            document.querySelectorAll('.map-controls .filter-button').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            allMarkers.forEach(({marker, venue}) => {
                if (venue.specialty.includes(beerType)) {
                    marker.addTo(map);
                } else {
                    map.removeLayer(marker);
                }
            });
        }
        
        function searchVenues() {
            const searchTerm = document.getElementById('searchBox').value.toLowerCase();
            
            allMarkers.forEach(({marker, venue}) => {
                const searchText = `${venue.name} ${venue.description} ${venue.highlights}`.toLowerCase();
                if (searchText.includes(searchTerm)) {
                    marker.addTo(map);
                } else {
                    map.removeLayer(marker);
                }
            });
        }
        
        function resetView() {
            map.setView([64.1466, -21.9426], 13);
            document.getElementById('searchBox').value = '';
            document.querySelectorAll('.map-controls .filter-button').forEach(btn => {
                btn.classList.remove('active');
                if (btn.textContent.includes('All Venues')) {
                    btn.classList.add('active');
                }
            });
            allMarkers.forEach(({marker}) => marker.addTo(map));
        }
        
        // Rating functions
        function loadVenueOptions() {
            const venueSelect = document.getElementById('venue-select');
            venueSelect.innerHTML = '<option value="">Select a venue...</option>';
            beerVenues.forEach(venue => {
                const option = document.createElement('option');
                option.value = venue.name;
                option.textContent = venue.name;
                venueSelect.appendChild(option);
            });
            
            // Load beer options
            const beerSelect = document.getElementById('beer-select');
            beerSelect.innerHTML = '<option value="">Select a beer...</option>';
            availableBeers.forEach(beer => {
                const option = document.createElement('option');
                option.value = JSON.stringify(beer);
                option.textContent = `${beer.name} (${beer.abv} - ${beer.style})`;
                beerSelect.appendChild(option);
            });
        }
        
        // Star rating functionality with half stars and touch support
        const starRating = document.getElementById('star-rating');
        const ratingDisplay = document.getElementById('rating-display');
        
        function handleStarInteraction(e) {
            if (e.target.classList.contains('star')) {
                const rect = e.target.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const width = rect.width;
                const starValue = parseInt(e.target.dataset.value);
                
                // If clicked on left half, subtract 0.5, otherwise use full value
                if (x < width / 2) {
                    currentRating = starValue - 0.5;
                } else {
                    currentRating = starValue;
                }
                
                updateStarDisplay();
                ratingDisplay.textContent = currentRating;
            }
        }
        
        starRating.addEventListener('click', handleStarInteraction);
        starRating.addEventListener('touchend', handleStarInteraction);
        
        starRating.addEventListener('mousemove', function(e) {
            if (e.target.classList.contains('star')) {
                const rect = e.target.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const width = rect.width;
                const starValue = parseInt(e.target.dataset.value);
                
                // Show preview on hover
                let hoverRating;
                if (x < width / 2) {
                    hoverRating = starValue - 0.5;
                } else {
                    hoverRating = starValue;
                }
                
                updateStarDisplay(hoverRating);
            }
        });
        
        starRating.addEventListener('mouseleave', function() {
            updateStarDisplay();
        });
        
        function updateStarDisplay(rating = currentRating) {
            document.querySelectorAll('.star').forEach((star) => {
                const starValue = parseInt(star.dataset.value);
                star.classList.remove('full', 'half');
                
                if (starValue <= rating) {
                    star.classList.add('full');
                } else if (starValue - 0.5 === rating) {
                    star.classList.add('half');
                }
            });
        }
        
        function submitRating(event) {
            event.preventDefault();
            
            if (currentRating === 0) {
                showToast('Please select a rating');
                return;
            }
            
            const beerData = JSON.parse(document.getElementById('beer-select').value);
            
            const rating = {
                id: Date.now(),
                venue: document.getElementById('venue-select').value,
                beer: beerData.name,
                style: beerData.style,
                abv: beerData.abv,
                size: document.getElementById('beer-size').value,
                rating: currentRating,
                notes: document.getElementById('beer-notes').value,
                date: new Date().toISOString()
            };
            
            userRatings.push(rating);
            localStorage.setItem('beerRatings', JSON.stringify(userRatings));
            
            // Reset form
            event.target.reset();
            currentRating = 0;
            updateStarDisplay();
            ratingDisplay.textContent = '0';
            
            showToast('Beer rating saved successfully! üç∫');
            
            // Check for achievements
            checkAchievements();
            
            // Update drunk meter if it's visible
            if (document.getElementById('drunk-meter').classList.contains('active')) {
                loadDrunkMeter();
            }
        }
        
        function rateAtVenue(venueName) {
            showSection('rating');
            setTimeout(() => {
                document.getElementById('venue-select').value = venueName;
            }, 100);
        }
        
        // Enhanced scoreboard functions with averaged ratings
        function getAveragedBeerRatings() {
            const beerGroups = {};
            
            // Group ratings by beer name
            userRatings.forEach(rating => {
                if (!beerGroups[rating.beer]) {
                    beerGroups[rating.beer] = [];
                }
                beerGroups[rating.beer].push(rating);
            });
            
            // Calculate averages and create beer objects
            const averagedBeers = Object.keys(beerGroups).map(beerName => {
                const ratings = beerGroups[beerName];
                const avgRating = ratings.reduce((sum, r) => sum + r.rating, 0) / ratings.length;
                const mostRecentRating = ratings.sort((a, b) => new Date(b.date) - new Date(a.date))[0];
                
                return {
                    beer: beerName,
                    averageRating: Math.round(avgRating * 2) / 2, // Round to nearest 0.5
                    rawAverage: avgRating,
                    ratingCount: ratings.length,
                    ratings: ratings,
                    style: mostRecentRating.style,
                    abv: mostRecentRating.abv,
                    lastVenue: mostRecentRating.venue,
                    lastRated: mostRecentRating.date
                };
            });
            
            return averagedBeers;
        }
        
        function loadScoreboard() {
            const podiumContainer = document.getElementById('podium-container');
            const scoreboardList = document.getElementById('scoreboard-list');
            
            if (userRatings.length === 0) {
                podiumContainer.innerHTML = `
                    <div class="podium-title">üèÜ Hall of Fame</div>
                    <div class="no-ratings-message">No ratings yet. Start rating beers to see them here!</div>
                `;
                scoreboardList.innerHTML = '';
                return;
            }
            
            const averagedBeers = getAveragedBeerRatings();
            const sortedBeers = averagedBeers.sort((a, b) => b.averageRating - a.averageRating);
            
            // Create podium for top 3
            const top3 = sortedBeers.slice(0, 3);
            let podiumHTML = '<div class="podium-title">üèÜ Hall of Fame</div>';
            
            if (top3.length > 0) {
                podiumHTML += '<div class="podium">';
                
                // Second place (left)
                if (top3.length > 1) {
                    podiumHTML += `
                        <div class="podium-place place-2" onclick="showBeerHistory('${top3[1].beer}')">
                            <div class="podium-beer">
                                <div class="podium-beer-name">${top3[1].beer}</div>
                                <div class="podium-beer-venue">${top3[1].lastVenue}</div>
                                <div class="podium-beer-rating">${'‚òÖ'.repeat(Math.floor(top3[1].averageRating))}${top3[1].averageRating % 1 !== 0 ? '‚òÜ' : ''}</div>
                                <div class="podium-beer-count">${top3[1].ratingCount} rating${top3[1].ratingCount > 1 ? 's' : ''}</div>
                            </div>
                            <div class="podium-stand">
                                <div class="podium-number">2</div>
                                <div class="podium-block">2nd</div>
                            </div>
                        </div>
                    `;
                }
                
                // First place (center)
                podiumHTML += `
                    <div class="podium-place place-1" onclick="showBeerHistory('${top3[0].beer}')">
                        <div class="podium-beer">
                            <div class="podium-beer-name">${top3[0].beer}</div>
                            <div class="podium-beer-venue">${top3[0].lastVenue}</div>
                            <div class="podium-beer-rating">${'‚òÖ'.repeat(Math.floor(top3[0].averageRating))}${top3[0].averageRating % 1 !== 0 ? '‚òÜ' : ''}</div>
                            <div class="podium-beer-count">${top3[0].ratingCount} rating${top3[0].ratingCount > 1 ? 's' : ''}</div>
                        </div>
                        <div class="podium-stand">
                            <div class="podium-number">1</div>
                            <div class="podium-block">1st</div>
                        </div>
                    </div>
                `;
                
                // Third place (right)
                if (top3.length > 2) {
                    podiumHTML += `
                        <div class="podium-place place-3" onclick="showBeerHistory('${top3[2].beer}')">
                            <div class="podium-beer">
                                <div class="podium-beer-name">${top3[2].beer}</div>
                                <div class="podium-beer-venue">${top3[2].lastVenue}</div>
                                <div class="podium-beer-rating">${'‚òÖ'.repeat(Math.floor(top3[2].averageRating))}${top3[2].averageRating % 1 !== 0 ? '‚òÜ' : ''}</div>
                                <div class="podium-beer-count">${top3[2].ratingCount} rating${top3[2].ratingCount > 1 ? 's' : ''}</div>
                            </div>
                            <div class="podium-stand">
                                <div class="podium-number">3</div>
                                <div class="podium-block">3rd</div>
                            </div>
                        </div>
                    `;
                }
                
                podiumHTML += '</div>';
            }
            
            podiumContainer.innerHTML = podiumHTML;
            
            // Load full list
            scoreboardList.innerHTML = sortedBeers.map((beer, index) => {
                const stars = '‚òÖ'.repeat(Math.floor(beer.averageRating)) + (beer.averageRating % 1 !== 0 ? '‚òÜ' : '');
                const lastRatedDate = new Date(beer.lastRated).toLocaleDateString();
                
                return `
                    <div class="beer-card" onclick="showBeerHistory('${beer.beer}')">
                        <div class="beer-card-header">
                            <div>
                                <div class="beer-name">${beer.beer}</div>
                                <div class="beer-venue">Last tried at ${beer.lastVenue}</div>
                            </div>
                            <div class="beer-rating">${stars} ${beer.averageRating.toFixed(1)}</div>
                        </div>
                        <div class="beer-details">
                            <span>Style: ${beer.style}</span>
                            <span>ABV: ${beer.abv || 'N/A'}</span>
                            <span>Ratings: ${beer.ratingCount}</span>
                            <span>Last rated: ${lastRatedDate}</span>
                        </div>
                        <div class="click-hint">Click to view rating history</div>
                    </div>
                `;
            }).join('');
        }
        
        function filterScoreboard(filter) {
            // Update filter buttons
            document.querySelectorAll('.filter-chip').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            const averagedBeers = getAveragedBeerRatings();
            let filteredBeers = [...averagedBeers];
            
            switch (filter) {
                case 'top10':
                    filteredBeers = filteredBeers.sort((a, b) => b.averageRating - a.averageRating).slice(0, 10);
                    break;
                case '5star':
                    filteredBeers = filteredBeers.filter(b => b.averageRating === 5).sort((a, b) => b.averageRating - a.averageRating);
                    break;
                case 'recent':
                    filteredBeers = filteredBeers.sort((a, b) => new Date(b.lastRated) - new Date(a.lastRated)).slice(0, 10);
                    break;
                default:
                    filteredBeers = filteredBeers.sort((a, b) => b.averageRating - a.averageRating);
            }
            
            const scoreboardList = document.getElementById('scoreboard-list');
            
            if (filteredBeers.length === 0) {
                scoreboardList.innerHTML = '<p style="text-align: center; color: #666;">No beers match this filter.</p>';
                return;
            }
            
            scoreboardList.innerHTML = filteredBeers.map(beer => {
                const stars = '‚òÖ'.repeat(Math.floor(beer.averageRating)) + (beer.averageRating % 1 !== 0 ? '‚òÜ' : '');
                const lastRatedDate = new Date(beer.lastRated).toLocaleDateString();
                
                return `
                    <div class="beer-card" onclick="showBeerHistory('${beer.beer}')">
                        <div class="beer-card-header">
                            <div>
                                <div class="beer-name">${beer.beer}</div>
                                <div class="beer-venue">Last tried at ${beer.lastVenue}</div>
                            </div>
                            <div class="beer-rating">${stars} ${beer.averageRating.toFixed(1)}</div>
                        </div>
                        <div class="beer-details">
                            <span>Style: ${beer.style}</span>
                            <span>ABV: ${beer.abv || 'N/A'}</span>
                            <span>Ratings: ${beer.ratingCount}</span>
                            <span>Last rated: ${lastRatedDate}</span>
                        </div>
                        <div class="click-hint">Click to view rating history</div>
                    </div>
                `;
            }).join('');
        }
        
        // Beer history modal functions
        function showBeerHistory(beerName) {
            const beerRatings = userRatings.filter(r => r.beer === beerName);
            const sortedRatings = beerRatings.sort((a, b) => new Date(b.date) - new Date(a.date));
            const avgRating = beerRatings.reduce((sum, r) => sum + r.rating, 0) / beerRatings.length;
            
            document.getElementById('modal-beer-name').textContent = beerName;
            document.getElementById('modal-average-rating').textContent = avgRating.toFixed(1);
            document.getElementById('modal-rating-count').textContent = `Based on ${beerRatings.length} rating${beerRatings.length > 1 ? 's' : ''}`;
            
            const historyHTML = sortedRatings.map(rating => {
                const stars = '‚òÖ'.repeat(Math.floor(rating.rating)) + (rating.rating % 1 !== 0 ? '‚òÜ' : '');
                const date = new Date(rating.date).toLocaleDateString();
                const time = new Date(rating.date).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                
                return`
                    